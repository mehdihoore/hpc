# .env file

# --- Default Database Connection (e.g., for auth_db) ---
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=auth_db
DB_USERNAME=root     # Or your MariaDB/MySQL username
DB_PASSWORD='' # Your MariaDB/MySQL password

# --- Projects Database Connection (Custom Connection Name) ---
DB_CONNECTION_PROJECTS=mysql
DB_HOST_PROJECTS=127.0.0.1
DB_PORT_PROJECTS=3306
DB_DATABASE_PROJECTS=projects_db
DB_USERNAME_PROJECTS=root      # Can be the same user if it has privileges on both DBs
DB_PASSWORD_PROJECTS=''